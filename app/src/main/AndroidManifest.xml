<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techbuddies.thalassemiabloodbank">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name=".donorActivities.showBloodBank"></activity>
        <activity android:name=".PatientActivities.showPatientHistory" />
        <activity android:name=".PatientActivities.historyofPatient" />
        <activity android:name=".PatientActivities.showbloodrequestpatients" />
        <activity android:name=".donorActivities.showBloodRequest" />
        <activity android:name=".PatientActivities.postBloodRequest" />
        <activity android:name=".PatientActivities.PatientProfile" />
        <activity android:name=".PatientActivities.patientLogin" />
        <activity android:name=".PatientActivities.dashboardPatient" />
        <activity android:name=".donorActivities.donorProfile" />
        <activity android:name=".donorActivities.aboutThalasemia" />
        <activity android:name=".donorActivities.VerificationActivity" />
        <activity android:name=".donorActivities.phoneLogin" />
        <activity android:name=".PatientActivities.pateintsregistration" android:windowSoftInputMode="adjustResize|stateHidden"/>
