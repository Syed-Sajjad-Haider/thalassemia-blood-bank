<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/appliedleaveCardView"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPateintName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Patient Name"
                android:textStyle="bold"
                android:fontFamily="@font/heronew"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_below="@id/txtPateintName"
                android:id="@+id/txtbloodgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:textStyle="bold"
                android:fontFamily="@font/heronew"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#82B1FF"
                android:textSize="20sp" />

            <TextView
                android:layout_below="@id/txtbloodgroup"
                android:id="@+id/txthospitalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hospital Name"
                android:textStyle="bold"
                android:fontFamily="@font/heronew"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#82B1FF"
                android:textSize="20sp" />

            <TextView
                android:layout_below="@id/txthospitalName"
                android:id="@+id/txtHbLevelP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HB Level"
                android:textStyle="bold"
                android:fontFamily="@font/heronew"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#82B1FF"
                android:textSize="20sp" />
            <TextView
                android:layout_below="@id/txtHbLevelP"
                android:id="@+id/txtPhoneNoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textStyle="bold"
                android:fontFamily="@font/heronew"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#82B1FF"
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>