<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".donorActivities.donorRegistration">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/registrationLayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/gradient_back">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo"/>

                <TextView
                    android:id="@+id/txtlogo"
                    android:layout_below="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donate Blood Save Life!"
                    android:fontFamily="@font/heronew"
                    android:layout_centerHorizontal="true"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/txtreg"
                    android:layout_below="@+id/txtlogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Registration"
                    android:fontFamily="@font/heronew"
                    android:layout_centerHorizontal="true"
                    android:textSize="22dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/backcurver">

                <EditText
                    android:id="@+id/edittxtchildNameP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="132dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_input"
                    android:hint="Child name"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edittxtpguardianName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edittxtchildNameP"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_input"
                    android:hint="Guardians Name"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <RelativeLayout
                    android:id="@+id/droplayoutpgendr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edittxtpguardianName"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/selectpGndr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/heronew"
                        android:text="Select Gender"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/black" />

                    <Spinner
                        android:id="@+id/pgenderDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/selectpGndr"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_input"
                        android:spinnerMode="dropdown"
                        android:textColor="#000000" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/edittxtpDiseaseType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/droplayoutpgendr"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/custom_input"
                    android:hint="Disease type"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edittxtpDOB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edittxtpDiseaseType"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:focusable="false"
                    android:textAlignment="viewStart"
                    android:background="@drawable/custom_input"
                    android:hint="Data of birth"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />


                <EditText
                    android:id="@+id/edittxtPphoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edittxtpDOB"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_input"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/edittxtPpassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edittxtPphoneNo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_input"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/showpasscheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Password"
                    android:textSize="15dp"
                    android:fontFamily="@font/heronew"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:layout_below="@id/edittxtPpassword"/>

                <EditText
                    android:id="@+id/edittxtPAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/showpasscheck"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_input"
                    android:hint="Address"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <RelativeLayout
                    android:id="@+id/pdroplayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edittxtPAddress"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/selectpBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/heronew"
                        android:text="Select Blood Group"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/black" />

                    <Spinner
                        android:id="@+id/pbloodgroupDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/selectpBloodGroup"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_input"
                        android:spinnerMode="dropdown"
                        android:textColor="#000" />

                </RelativeLayout>



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnpRegisterationSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pdroplayout"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/gradient_back"
                    android:fontFamily="@font/heronew"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/gotosignin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnpRegisterationSubmit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="Already Have an account? Sign In"
                    android:textColor="@color/black" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>